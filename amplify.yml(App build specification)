version: 1
backend:
  phases:
    build:
      commands:
        - '# Execute Amplify CLI with the helper script'
        - amplifyPush --simple
env:
  variables:
    BUILD_FOLDER: app
    OUTPUT_FOLDER: dist
frontend:
  phases:
    preBuild:
      commands:
        - cd ${BUILD_FOLDER}
        - mkdir ./${OUTPUT_FOLDER}
        - npm ci
    build:
      commands:
        - pwd
        - ls -al ${OUTPUT_FOLDER}
        - npm run build
  artifacts:
    baseDirectory: ${OUTPUT_FOLDER}/dist
    files:
      - '**/*'
  cache:
    paths:
      - node_modules/**/*
