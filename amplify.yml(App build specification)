version: 1
backend:
  phases:
    build:
      commands:
        - '# Execute Amplify CLI with the helper script'
        - amplifyPush --simple
frontend:
  phases:
    preBuild:
      commands:
        - npm ci
    build:
      commands:
        - export buildir=$(pwd)
        - echo $pwd
        - mkdir ./dist
        - npm run build
        - ls -al
  artifacts:
    baseDirectory: $buildir/dist
    files:
      - '**/*'
  cache:
    paths:
      - node_modules/**/*
